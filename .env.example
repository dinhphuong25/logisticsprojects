# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/coldchain_wms?schema=public"

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Temperature thresholds (can be overridden in DB config)
FROZEN_MIN=-25
FROZEN_MAX=-18
CHILLED_MIN=0
CHILLED_MAX=4
COOL_MIN=5
COOL_MAX=10

# Tolerance
TOLERANCE_PERCENT=0.02
TOLERANCE_WEIGHT_KG=5

# Receiving rules
REQUIRE_LOT=true
REQUIRE_EXPIRY=true
MIN_SHELF_DAYS=60
MAX_DOOR_OPEN_MINUTES=20

# Putaway strategy
PUTAWAY_STRATEGY=FEFO_BY_TEMP
